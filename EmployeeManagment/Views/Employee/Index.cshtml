@model List<Domain.Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}
<script src="~/Content/Js/EmployeeCRUD.js"></script>


<style>
    label {
        font-size: 16px !important;
    }

    btn {
        font-size: 18px !important;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label for="usr">Department Name:</label>
                <div class="form-group">
                    <select id="drpDeptName" class="form-control">
                    </select>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label for="usr">First Name:</label>
                <input type="text" class="form-control" id="txtFirstName">
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label for="usr">Last Name:</label>
                <input type="text" class="form-control" id="txtLastName">
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group">
                <label for="usr">Address:</label>
                <textarea id="txtAddress" class="form-control" rows="4"></textarea>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group ">
                <a href="#" class="btn btn-success" style="margin-top: 23px;" id="btnSave">Save</a>
            </div>
        </div>
    </div>
    <input type="hidden" id="hdnId" value="0" />
    <hr />
    <div class="row">
        <table class="table table-bordered table-responsive">
            <thead>
                <tr>
                    <th>Department Name</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Address</th>

                    <th style="text-align: center;">Edit</th>
                    <th style="text-align: center;">Delete</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count != 0)
                {
                    foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.DepartmentName</td>
                        <td>@item.Name</td>
                        <td>@item.LastName</td>
                        <td>@item.Address</td>

                        <td style="text-align: center;"><a href="#" onclick="fnGetDataById(@item.Id)"><i class="fa fa-pencil"></i></a></td>
                        <td style="text-align: center;"><a href="#" onclick="fnDeleteById(@item.Id)"><i class="fa fa-trash" aria-hidden="true"></i></a></td>

                    </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" style="text-align:center;">No Data Available</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


